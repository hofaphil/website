---
import "bootstrap/dist/css/bootstrap.min.css";
import "bootstrap-icons/font/bootstrap-icons.css";

type Props = {
  backgroundColor?: string;
  pageTitle?: string;
};

const { pageTitle = "philipphofer.de", backgroundColor = "black" } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <script src="bootstrap/dist/js/bootstrap.bundle.min.js?url"></script>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <link rel="apple-touch-icon" sizes="120x120" href="/apple-touch-icon.png" />
    <meta name="description" content="Personal website of Philipp Hofer" />
    <title>{pageTitle}</title>
  </head>
  <body>
    <slot />
  </body>
</html>

<style define:vars={{ backgroundColor }}>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: var(--backgroundColor);
  }
</style>
